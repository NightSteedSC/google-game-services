<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-google-games-services" version="1.0.46"
		xmlns="http://apache.org/cordova/ns/plugins/1.0"
		xmlns:android="http://schemas.android.com/apk/res/android">
	<name>GoogleGameServices</name>

	<hook type="after_prepare" src="scripts/updateConfig.js" />
	<hook type="after_prepare" src="scripts/replaceAppId.js" />

	<js-module name="GoogleGameServices" src="www/GoogleGameServices.js">
		<clobbers target="cordova.plugins.GoogleGameServices" />
	</js-module>

	<platform name="android">

		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			<meta-data android:name="com.google.android.gms.games.APP_ID"
					   android:value="@string/google_games_app_id" />
		</config-file>

		<preference name="GOOGLE_GAMES_SERVICES_WEB_CLIENT_ID" />

		<source-file src="src/android/GoogleGameServices.java"
					 target-dir="src/org/apache/cordova/googleGameServices" />
		<framework src="com.google.android.gms:play-services-games:21.0.0" />
	</platform>
</plugin>

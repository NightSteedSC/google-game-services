<?xml version='1.0' encoding='utf-8'?>
<plugin id="google-game-services" version="1.0.1"
xmlns="http://apache.org/cordova/ns/plugins/1.0" 
xmlns:android="http://schemas.android.com/apk/res/android">
	<name>NSG_GoogleMobileServices</name>
	<js-module name="NSG_GoogleMobileServices" src="www/google-game-services.js">
		<clobbers target="cordova.plugins.google-game-services" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="google-game-services">
				<param name="android-package" value="org.apache.cordova.google-game-services.google-game-services" />
			</feature>
		</config-file>
		 <config-file target="AndroidManifest.xml" parent="application">
            <meta-data
                    android:name="com.google.android.gms.games.APP_ID"
                    android:value=""/>
        </config-file>
		
		<config-file parent="/*" target="AndroidManifest.xml"></config-file>
		<source-file src="src/android/google-game-services.java" target-dir="src/org/apache/cordova/google-game-services" />

		
		<framework src="com.google.android.gms:play-services-auth:19.0.0" />
        <framework src="com.google.android.gms:play-services-games:21.0.0" />
	</platform>
	
</plugin>